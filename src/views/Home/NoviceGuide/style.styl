@import '~assets/stylus/variable';
.guide {
    background-color: $bgMain;
    &_wrap {
        subScroll();
        .title {
            height: 44px;
            h2 {
                font-size: 18px;
                margin-bottom: 14px;
                color: $color3;
            }
            p {
                font-size: 12px;
                color: $color9;
                span {
                    color: $blue;
                }
            }
        }
        &_user {
            padding: 14px 16px 0 16px;
            background-color: $write;
            .Bitmap {
                width: 100%;
                margin-top: 12px;
                img {
                    width: 100%;
                }
            }
            .List {
                &_single {
                    width: 100%;
                    height: 78px;
                    display: flex;
                    align-items: center;
                    .left_icon {
                        width: 57px;
                        padding-right: 15px;
                        img {
                            width: 100%;
                        }
                    }
                    .right_cont {
                        position: relative;
                        width: calc(100% - 57px);
                        height: 100%;
                        border-1px($colorE, 100%);
                        &_size {
                            display: flex;
                            flex-direction: column;
                            justify-content: center;
                            position: absolute;
                            left: 0;
                            top: 0;
                            bottom: 0;
                            right: 0;
                            h3 {
                                font-size: 15px;
                                color: $color3;
                            }
                            p {
                                margin-top: 12px;
                                font-size: 12px;
                                color: $color9;
                                width: 100%;
                                no-wrap();
                            }
                        }
                    }
                    &:last-child {
                        .right_cont {
                            border-1px($write, 100%);
                        }
                    }
                }
            }
        }
        &_asked {
            margin-top: 10px;
            padding: 16px;
            background-color: $write;
            .title {
                margin-bottom: 16px;
            }
            .group {
                // margin-top: 16px;
                &_nav {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    height: 46px;
                    border-1px($colorE, 0);
                    &_l {
                        display: flex;
                        align-items: center;
                        font-size: 15px;
                        color: $color3;
                        img {
                            width: 24px;
                            margin-right: 6px;
                        }
                    }
                    .arrow {
                        font-size: 16px;
                        color: $color12;
                    }
                }
                &_cont {
                    display: flex;
                    flex-wrap: wrap;
                    &_single {
                        display: flex;
                        align-items: center;
                        width: 50%;
                        height: 46px;
                        font-size: 13px;
                        color: $color6;
                        border-1px($colorE, 100%);
                        img {
                            width: 6px;
                            margin-right: 4px;
                        }
                        p {
                            no-wrap();
                            padding-right: 13px;
                        }
                        &.row {
                            width: 100%;
                            border-1px($write, 100%);
                        }
                    }
                }
            }
        }
    }
}