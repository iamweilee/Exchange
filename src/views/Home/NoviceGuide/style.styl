@import '~assets/stylus/variable';
.guide {
  width: 100%;
  height: 1000px;
  background-color: $bgMain;
  &_wrap {
    .title {
      height: 44px;
      h2 {
        font-size: 18px;
        margin-bottom: 14px;
        color: $color3;
      }
      p {
        font-size: 12px;
        color: $color9;
        span {
          color: $blue;
        }
      }
    }
    &_user {
      padding: 14px 16px 0 16px;
      background-color: $write;
      .Bitmap {
        width: 100%;
        margin-top: 12px;
        img {
          width: 100%;
        }
      }
      .List {
        &_single {
          width: 100%;
          height: 78px;
          display: flex;
          align-items: center;
          .left_icon {
            width: 57px;
            padding-right: 15px;
            img {
              width: 100%;
            }
          }
          .right_cont {
            flex: 1;
            height: 100%;
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            border-1px($colorE, 100%);
            &_size {
              flex: 1;
              h3 {
                font-size: 15px;
                color: $color3;
              }
              p {
                margin-top: 12px;
                font-size: 12px;
                color: $color9;
                width: 206px;
                no-wrap();
              }
            }
            &_more {
              width: 80px;
              padding-left: 24px;
              line-height: 26px;
              button {
                width: 56px;
                height: 24px;
                background: url('../../../assets/Images/guide/bg_btn.png') no-repeat center / cover;
                font-size: 12px;
                color: $write;
              }
            }
          }
          &:last-child {
            .right_cont {
              border-1px($write, 100%);
            }
          }
        }
      }
    }
    &_asked {
      margin-top: 10px;
      padding: 16px;
      background-color: $write;
      .title {
        margin-bottom: 16px;
      }
      .group {
        // margin-top: 16px;
        &_nav {
          display: flex;
          justify-content: space-between;
          align-items: center;
          height: 46px;
          border-1px($colorE, 0);
          &_l {
            font-size: 15px;
            color: $color3;
            img {
              width: 24px;
              margin-right: 6px;
            }
          }
          .arrow {
            font-size: 16px;
            color: $color12;
          }
        }
        &_cont {
          display: flex;
          flex-wrap: wrap;
          &_single {
            display: flex;
            align-items: center;
            width: 50%;
            height: 46px;
            font-size: 13px;
            color: $color6;
            border-1px($colorE, 100%);
            img {
              width: 6px;
              margin-right: 4px;
            }
            p {
              no-wrap();
              padding-right: 13px;
            }
            &.row {
              width: 100%;
              border-1px($write, 100%);
            }
          }
        }
      }
    }
  }
}