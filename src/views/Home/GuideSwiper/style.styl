@import '~assets/stylus/variable';
.guidPage {
    width: 100%;
    min-height: 100%;
    background-color: $color9;
    position: relative;
    .back_left {
        position: absolute;
        left: 0;
        top: 0;
        height: 76px;
        width: 46px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: $write;
        cursor: pointer;
        z-index: 10;
        .back_icon {
            font-size: 20px;
        }
    }
    .custom-indicator {
        position: absolute;
        top: 41px;
        left: 0;
        width: 100%;
        height: 78px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        font-size: 24px;
        z-index: 9;
        .title {
            color: $write;
        }
        .num {
            margin-top: 4px;
            width: 50px;
            height: 50px;
            border-radius: 25px;
            border: 4px solid $color9;
            background-color: $write;
            display: flex;
            align-items: center;
            justify-content: center;
            color: $blue;
        }
    }
    .guideSwiper {
        subScroll(0, 168px);
        padding-top: 80px;
        &_item {
            width: 100%;
            height: 100%;
            padding: 16px;
            img {
                width: 100%;
                height: 100%;
            }
        }
        .van-swipe {
            cursor: pointer;
            position: absolute;
            top: 76px;
            bottom: 11px;
            width: 100%;
        }
        .lrBtn {
            width: 100%;
            height: 56px;
            display: flex;
            justify-content: center;
            position: absolute;
            left: 0;
            bottom: 0;
            p {
                cursor: pointer;
                width: 56px;
                height: 56px;
                background-color: $write;
                border-radius: 28px;
                box-shadow: 0 0 4px 2px rgba(0, 0, 0, 0.1);
                display: flex;
                align-items: center;
                justify-content: center;
                z-index: 10;
                &:first-child {
                    margin-right: 40px;
                }
                img {
                    width: 26px;
                    vertical-align: middle;
                }
            }
        }
    }
    &_intord {
        position: absolute;
        left: 0;
        bottom: 16px;
        height: 140px;
        font-size: 15px;
        line-height: 28px;
        padding: 0 16px;
        color: $write;
        overflow-y: scroll;
    }
}
