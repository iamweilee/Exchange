@import '~assets/stylus/variable';
.service {
    background-color: $bgMain;
    height: 100%;
    &_wrap {
        height: calc(100vh - 116px);
        .time {
            padding: 0 32px;
            width: 100%;
            text-align: center;
            font-size: 14px;
            color: $color9;
            padding: 14px;
        }
        .msg {
            padding: 20px 32px;
            display: flex;
            // margin-bottom: 40px;
            &_l {
                width: 36px;
                height: 36px;
                border-radius: 18px;
                overflow: hidden;
                img {
                    width: 100%;
                    height: 100%;
                }
            }
            &_r {
                max-width: 247px;
                margin-left: 8px;
                padding: 12px;
                background-color: $write;
                border-radius: 6px;
                word-break: break-all;
                p {
                    color: $blue;
                    font-size: 15px;
                    line-height: 28px;
                    cursor: pointer;
                    &.tips {
                        color: $color9;
                    }
                }
            }
            &.self {
                flex-direction: row-reverse;
                .msg_r {
                    margin-right: 8px;
                    background-color: $blue;
                    color: $write;
                }
            }
        }
    }
    &_send {
        height: 70px;
        width: 100%;
        background-color: $write;
        padding: 14px 16px;
        display: flex;
        color: $color3;
        .inp {
            flex: 1;
            height: 40px;
            position: relative;
            input {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                height: 40px;
                border-radius: 20px;
                background-color: $bgMain;
                border: none;
                padding: 12px 46px 12px 12px;
                resize: none;
                line-height: 16px;
                font-size: 15px;
            }
            .icon {
                width: 40px;
                height: 40px;
                position: absolute;
                right: 0;
                top: 0;
                padding: 6px;
                img {
                    width: 100%;
                }
            }
        }
        button {
            height: 40px;
            width: 60px;
            padding-left: 12px;
            font-size: 16px;
        }
    }
}