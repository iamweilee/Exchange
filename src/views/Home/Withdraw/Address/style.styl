@import '~assets/stylus/variable.styl';
.address {
    &_wrap {
        padding: 16px;
        subScroll();
        font-size: 15px;
        .from {
            &_single {
                margin-bottom: 16px;
                width: 100%;
                .label {
                    margin-bottom: 10px;
                }
                .inp {
                    padding: 10px 0;
                    width: 100%;
                    height: 46px;
                    border: 1px solid $color12;
                    border-radius: 4px;
                    input {
                        background-color: rgba(0, 0, 0, 0);
                        width: 100%;
                        height: 26px;
                        border: none;
                        padding: 0 16px;
                    }
                    &_tips {
                        padding-top: 20px;
                    }
                }
            }
            &_select {
                margin-top: 40px;
                display: flex;
                .checkbox {
                    width: 16px;
                    margin-right: 6px;
                    height: 16px;
                    background-color: $colorE;
                    border-radius: 4px;
                    img {
                        width: 16px;
                        height: 16px;
                    }
                }
                .size {
                    flex: 1;
                    font-size: 13px;
                    line-height: 16px;
                }
            }
        }
        .okBtn {
            margin-top: 40px;
            width: 100%;
            height: 46px;
            border-radius: 4px;
            font-size: 16px;
            color: $write;
            background: url('../../../../assets/Images/regLogin/bg_btn.png') no-repeat center / cover;
            &:disabled {
                opacity: 0.6;
            }
        }
    }
}
.siteList {
    background-color: $write;
    &_wrap {
        padding-left: 20px;
        subScroll(46px, 46px);
        .single {
            width: 100%;
            position: relative;
            height: 90px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 1px solid $colorE;
            ul {
                position: absolute;
                left: 40px;
                right: 80px;
                li {
                    no-wrap();
                    padding: 4px;
                }
            }
            .delet {
                position: absolute;
                right: 20px;
                background-color: $red1;
                width: 48px;
                height: 26px;
                border-radius: 4px;
                color: $write;
                border: none;
            }
        }
    }
    .newBtn {
        width: 100%;
        height: 46px;
        background-color: $blue;
        position: fixed;
        bottom: 0;
        left: 0;
        color: $write;
        font-size: 16px;
    }
}