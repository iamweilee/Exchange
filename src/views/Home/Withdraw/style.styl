@import '~assets/stylus/variable';
.otc {
    background-color: $write;
    &_wrapper {
        width: 100%;
    }
}
// OTC 交易
.merchant {
    width: 100%;
    padding: 0 18px;
    &_title {
        height: 54px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-size: 15px;
        color: $color3;
        .link {
            font-size: 13px;
            color: $ablue;
            text-decoration: underline;
        }
    }
    &_single {
        .single {
            width: 100%;
            height: 172px;
            margin-bottom: 16px;
            box-shadow: 0 0 4px 1px rgba(0, 0, 0, 0.1);
            border-radius: 4px;
            &_t {
                padding: 14px 14px 6px 14px;
                display: flex;
                align-items: center;
                justify-content: space-between;
                &_l {
                    padding: 1px 0;
                    height: 36px;
                    display: flex;
                    flex-direction: column;
                    justify-content: space-between;
                    .name {
                        font-size: 16px;
                        color: $color3;
                    }
                    &_b {
                        display: flex;
                        p {
                            padding: 0 6px;
                            color: $color9;
                            &:first-child {
                                padding-left: 0;
                                line-1px($color9, 100%, 100%);
                            }
                        }
                    }
                }
                &_r {
                    button {
                        width: 56px;
                        height: 23px;
                        border-radius: 4px;
                        font-size: 13px;
                        color: $ablue;
                        border: 1px solid $Kborder;
                    }
                }
            }
            &_m {
                width: 100%;
                height: 74px;
                background-color: #F5FAFF;
                font-size: 13px;
                color: $color6;
                display: flex;
                justify-content: space-between;
                padding: 14px;
                &_l {
                    height: 45px;
                    position: relative;
                    .tips {
                        position: absolute;
                        bottom: 0;
                        left: 0;
                        color: $ablue;
                    }
                }
                &_r {
                    display: flex;
                    height: 45px;
                    .price {
                        color: $color3;
                    }
                }
            }
            &_b {
                height: 42px;
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 0 14px;
                &_l {
                    font-size: 12px;
                    color: $color9;
                    display: flex;
                    align-items: center;
                    .icon {
                        color: $color3;
                        display: flex;
                        align-items: center;
                        padding: 0 8px;
                        img {
                            width: 20px;
                            margin-right: 6px;
                        }
                    }
                }
                &_r {
                    button {
                        width: 76px;
                        height: 26px;
                        background: url('../../../assets/Images/Otc/buy_btn.png') no-repeat center / cover;
                        color: $write;
                        font-size: 13px;
                    }
                }
            }
        }
    }
}
// 钱包转账
.wallet {
    padding: 8px 16px;
    &_tip {
        font-size: 10px;
        line-height: 18px;
        margin-bottom: 10px;
    }
    .from_single {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 46px;
        width: 100%;
        border-radius: 4px;
        background-color: $bgMain;
        font-size: 16px;
        padding: 0 16px;
        margin-bottom: 10px;
        &.border {
            background-color: $write;
            border: 1px solid $colorE;
        }
        .label {
            width: 100px;
            color: $color6;
        }
        .cont {
            position: relative;
            height: 100%;
            width: calc(100% - 100px);
            display: flex;
            align-items: center;
            color: $ablue;
            .inpVal {
                width: 90%;
                padding-right: 16px;
                p {
                    font-size: 13px;
                    no-wrap();
                    &:last-child {
                        margin-top: 6px;
                    }
                }
            }
            .select_btn {
                position: absolute;
                width: 46px;
                height: 100%;
                right: -16px;
                top: 0;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 18px;
            }
        }
        .inp {
            flex: 1;
            height: 18px;
            border: none;
            background-color: rgba(0, 0, 0, 0);
        }
        .sendMsg {
            position: absolute;
            right: 0;
            top: 0;
            font-size: 13px;
            color: $ablue;
            height: 100%;
            padding: 15px 10px;
            &:disabled {
                opacity: 0.6;
            }
        }
    }
    .okBtn {
        margin-top: 40px;
        width: 100%;
        height: 46px;
        border-radius: 4px;
        font-size: 16px;
        color: $write;
        background: url('../../../assets/Images/regLogin/bg_btn.png') no-repeat center / cover;
        &:disabled {
            opacity: 0.6;
        }
    }
}