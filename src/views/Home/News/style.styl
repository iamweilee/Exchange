@import '~assets/stylus/variable';
.flash {
    &_wrap {
        subScroll();
    }
    &_list {
        background-color: $bgMain;
        &_title {
            width: 100%;
            height: 33px;
            font-size: 12px;
            color: $color9;
            padding: 10px 16px;
        }
        .List {
            &_single {
                padding: 16px;
                background-color: $write;
                margin-bottom: 4px;
                &_title {
                    font-size: 16px;
                    color: $color3;
                    padding-bottom: 8px;
                }
                &_content {
                    font-size: 14px;
                    color: $color6;
                    line-height: 20px;
                }
                &_handle {
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                    font-size: 12px;
                    color: $color9;
                    padding-top: 4px;
                    .right {
                        display: flex;
                        align-items: center;
                        span {
                            display: flex;
                            align-items: center;
                            &:first-child {
                                margin-right: 16px;
                            }
                            img {
                                width: 18px;
                                margin-right: 4px;
                            }
                        }
                    }
                }
            }
        }
    }
}