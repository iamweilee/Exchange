@import '~assets/stylus/variable.styl';
.order {
    position: fixed;
    left: 0;
    bottom: 0;
    height: 406px;
    width: 100%;
    background-color: $KSub1Bg;
    &_title {
        padding: 0 16px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-size: 16px;
        color: $write;
        height: 50px;
        img {
            width: 18px;
        }
    }
    &_handle {
        padding: 0 16px;
        height: 44px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 14px;
        color: $write;
        p {
            display: flex;
            align-items: center;
        }
        img {
            width: 18px;
            margin-left: 4px;
        }
    }
    &_form {
        height: 312px;
        overflow-y: auto;
        padding: 0 16px;
        padding-bottom: 72px;
        position: relative;
        .from_single {
            &_label {
                display: flex;
                justify-content: space-between;
                align-items: center;
                font-size: 13px;
                color: $KSize;
                height: 36px;
            }
            &_cont {
                width: 100%;
                height: 42px;
                padding: 8px 0;
                color: $KSize;
                .box {
                    position: relative;
                    width: 100%;
                    height: 26px;
                    input {
                        position: absolute;
                        left: 0;
                        top: 0;
                        width: 100%;
                        height: 26px;
                        border: none;
                        text-align: center;
                        background-color: transparent;
                        color: $write;
                        font-size: 16px;
                    }
                    img {
                        width: 26px;
                        position: absolute;
                        top: 0;
                        &.minus {
                            left: 0;
                        }
                        &.add {
                            right: 0;
                        }
                    }
                }
                .hand {
                    display: flex;
                    justify-content: space-between;
                    button {
                        width: 60px;
                        height: 26px;
                        border-radius: 16px;
                        font-size: 14px;
                        border: 1px solid #1b212d;
                        &.active {
                            color: $write;
                            background: linear-gradient(left, #2DAFFF, #2C68FC);
                        }
                    }
                    &.cash {
                        button {
                            width: 106px;
                        }
                    }
                }
            }
        }
        .submit_btn {
            position: absolute;
            bottom: 0;
            left: 0;
            height: 70px;
            width: 100%;
            padding: 12px 16px 0 16px;
            button {
                width: 100%;
                height: 44px;
                background-color: $green;
                color: $write;
                font-size: 16px;
                border-radius: 22px;
            }
        }
    }
}