@import '~assets/stylus/variable.styl';
.intord {
    padding: 0 16px;
    &_list {
        li {
            display: flex;
            align-items: center;
            height: 36px;
            font-size: 13px;
            line-height: 24px;
            .big {
                font-size: 16px;
                color: $blue;
            }
            .small {
                color: $KSize;
                margin-left: 16px;
            }
            .label {
                width: 82px;
                color: $KSize;
            }
            .val {
                flex: 1;
                color: $write;
                word-break: break-all;
            }
            &.title {
                height: 50px;
            }
            &.letter {
                height: auto;
                align-items: flex-start;
            }
        }
    }
}