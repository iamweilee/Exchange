@import '~assets/stylus/variable.styl';
$colorSize = #9BA0AC;
.pos {
    width: 100%;
    min-height: 800px;
    background-color: #1b212d;
    &_top {
        height: 120px;
        width: 100%;
        background-color: #191E28;
        padding: 16px 16px 0 16px;
        &_t {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            .left {
                font-size: 32px;
            }
            .right {
                height: 60px;
                font-size: 12px;
                color: #9ba0ac;
                li {
                    padding: 4px 0;
                }
            }
        }
        &_btn {
            .btn_list {
                display: flex;
                justify-content: space-between;
                button {
                    width: 44px;
                    height: 18px;
                    border-radius: 9px;
                    color: $colorSize;
                    &.active {
                        color: $write;
                        background: linear-gradient(left, #2db5ff, #2c71fc);
                    }
                }
            }
        }
    }
    .k_line {
        height: 397px;
        width: 100%;
        padding-top: 12px;
    }
    .pos_wrap {
        .tabs {
            position: relative;
            width: 100%;
            height: 50px;
            background-color: #191E28;
            &_wrap {
                display: flex;
                justify-content: space-between;
                li {
                    width: 50%;
                    height: 50px;
                    p {
                        width: 100%;
                        height: 50px;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        font-size: 16px;
                        color: $colorSize;
                    }
                    &.router-link-exact-active {
                        p {
                            color: $blue;
                        }
                    }
                }
            }
            &_line {
                transition-duration: 0.3s;
                position: absolute;
                width: 50%;
                height: 2px;
                background: linear-gradient(#2db5ff, #2c68fc);
                left: 0;
                bottom: 0;
            }
        }
        .cont {
            padding-bottom: 70px;
        }
    }
    .handWrap {
        background-color: #191E28;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: fixed;
        left: 0;
        bottom: 0;
        height: 62px;
        padding: 0 16px;
        button {
            width: 164px;
            height: 38px;
            border-radius: 4px;
            background-color: $redBtn;
            color: $write;
            font-size: 16px;
            &:last-child {
                background-color: $green;
            }
        }
    }
}