@import '~assets/stylus/variable';
.recharge {
    background-color: $bgMain;
    &_title {
        background-color: $write;
        padding: 0 16px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 64px;
        &_l {
            font-size: 18px;
            color: $color3;
        }
        &_r {
            font-size: 14px;
            color: $color9;
            .size {
                color: $color3;
            }
        }
    }
    &_cont {
        background-color: $write;
        padding: 0 16px;
        &_title {
            font-size: 15px;
            color: $color3;
        }
        .List {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            button {
                width: 106px;
                height: 30px;
                border-radius: 4px;
                border: 1px solid $colorE;
                margin-top: 16px;
                font-size: px2rem(14);
                color: $color9;
                &.active {
                    background: linear-gradient(left, #2db5ff, #2c68fc);
                    border: none;
                    color: $write;
                }
            }
        }
    }
    &_from {
        padding: 0 16px;
        margin-top: 10px;
        background-color: $write;
        &_single {
            width: 100%;
            min-height: 54px;
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            font-size: 15px;
            &:first-child {
                border-bottom: 1px solid $colorE;
            }
            .label {
                width: 108px;
                height: 31px;
                padding: 8px 0;
            }
            input {
                flex: 1;
                height: 31px;
                border: none;
                placeholderColor($color12, 15px);
            }
            &.radioGroup {
                align-items: flex-start;
                .label {
                    height: 40px;
                    padding-top: 17px;
                }
            }
            ul {
                flex: 1;
                padding-top: 7px;
                li {
                    display: flex;
                    align-items: center;
                    font-size: 14px;
                    color: $color6;
                    height: 40px;
                    img {
                        width: 15px;
                        margin-right: 6px;
                    }
                }
            }
        }
        &_deal {
            padding: 20px 0;
            font-size: 13px;
            display: flex;
            align-items: center;
            .checkbox {
                width: 16px;
                height: 16px;
                background-color: $colorE;
                border-radius: 4px;
                margin-right: 10px;
                img {
                    width: 16px;
                }
            }
        }
    }
    &_tips {
        padding: 0 16px;
        line-height: 26px;
        background-color: $write;
        h2 {
            font-size: 13px;
            color: $color3;
        }
        p {
            font-size: 11px;
            color: $color9;
            display: flex;
        }
    }
    &_btn {
        padding: 24px 16px;
        background-color: $write;
        button {
            width: 100%;
            height: 46px;
            border-radius: 4px;
            background: linear-gradient(left, #00BFDE, $blue);
            font-size: 16px;
            color: $write;
        }
    }
}