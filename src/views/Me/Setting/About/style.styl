@import '~assets/stylus/variable.styl';
.about {
    height: 100%;
    &_logo {
        width: 100%;
        height: 186px;
        text-align: center;
        padding: 27px;
        img {
            width: 132px;
            height: 132px;
        }
    }
    &_list {
        margin-bottom: 10px;
        .van-cell {
            font-size: 15px;
            color: $color3;
            padding: 0 16px;
            align-items: center;
            height: 50px;
            &__value {
                display: flex;
                justify-content: flex-end;
                align-items: center;
                .van-uploader {
                    extend-click();
                }
            }
            &:after {
                left: 16px;
                border-bottom: 1px solid $colorE;
            }
            &:last-child {
                &:after {
                    content: ' ';
                    position: absolute;
                    pointer-events: none;
                    -webkit-box-sizing: border-box;
                    box-sizing: border-box;
                    right: 0;
                    bottom: 0;
                    -webkit-transform: scaleY(0.5);
                    transform: scaleY(0.5);
                }
            }
        }
    }
}