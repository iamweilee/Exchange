@import '~assets/stylus/variable.styl';
.fund {
    &_wrap {
        width: 100%;
    }
    &_list {
        background-color: $write;
        width: 100%;
        subScroll();
        &_single {
            height: 86px;
            padding: 0 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-1px($colorE, 100%);
            .left {
                &_title {
                    margin-bottom: 6px;
                    span {
                        &:first-child {
                            font-size: 16px;
                            color: $color3;
                            margin-right: 15px;
                        }
                        &:last-child {
                            font-size: 14px;
                        }
                    }
                }
                &_shops, &_time {
                    font-size: 12px;
                    color: $color9;
                    display: flex;
                    align-items: center;
                    span {
                        display: inline-block;
                        width: 216px;
                        color: $ablue;
                        overflow: hidden;
                        white-space: nowrap;
                        text-overflow: ellipsis;
                        margin-left: 4px;
                    }
                }
                &_shops {
                    margin-bottom: 6px;
                }
            }
            .right {
                .big {
                    font-size: 20px;
                    color: $color6;
                }
                .small {
                    text-align: right;
                    font-size: 13px;
                    color: $color9;
                }
            }
        }
    }
}