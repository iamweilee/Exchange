@import '~assets/stylus/variable.styl';
.bank {
    padding: 0 18px;
    &_list {
        padding-top: 23px;
        .single {
            width: 100%;
            height: 118px;
            padding: 18px;
            background: url('../../../assets/Images/other/bank_bg.png') no-repeat center / cover;
            display: flex;
            justify-content: space-between;
            font-size: 15px;
            color: $color9;
            margin-bottom: 12px;
            &_l {
                display: flex;
                img {
                    width: 41px;
                    height: 41px;
                    border-radius: 21px;
                    margin-right: 12px;
                }
                .right {
                    font-size: 13px;
                    &_title {
                        font-size: 16px;
                        color: $color3;
                        margin-bottom: 8px;
                    }
                    &_bot {
                        margin-top: 26px;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        p {
                            padding-right: 16px;
                            font-size: 16px;
                            color: $color3;
                        }
                    }
                }
            }
            .unbind {
                width: 40px;
                height: 20px;
                extend-click();
            }
        }
    }
    .addBtn {
        button {
            width: 100%;
            height: 54px;
            border: 1px solid $color12;
            border-radius: 4px;
            font-size: 16px;
            color: $color9;
            .plus_icon {
                margin-right: 6px;
            }
        }
    }
}
.addBank {
    padding-left: 18px;
    &_tips {
        height: 60px;
        display: flex;
        align-items: center;
        font-size: 13px;
        color: $blue;
    }
    &_form {
        .single {
            height: 50px;
            width: 100%;
            padding-right: 18px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            font-size: 15px;
            border-1px($colorE, 100%);
            input {
                flex: 1;
                font-size: 15px;
                height: 40px;
                border: none;
                padding-left: 6px;
                color: $color3;
                placeholderColor($color12, 15px);
            }
            .arrow_icon {
                font-size: 18px;
                font-weight: 700;
                color: $color9;
            }
        }
    }
    &_btn {
        padding-right: 18px;
        padding-top: 98px;
        button {
            width: 100%;
            height: 45px;
            border-radius: 4px;
            font-size: 16px;
            color: $write;
            background: linear-gradient(left, #00BFDF, #00A7E0);
        }
    }
}