@import '~assets/stylus/variable';
.holdD {
    &_btn {
        padding: 16px 16px 12px 16px;
        &_scroll {
            display: flex;
            justify-content: space-around;
            width: 480px;
            background-color: $bgMain;
            border-radius: 13px;
            button {
                height: 22px;
                width: 60px;
                font-size: 12px;
                border-radius: 13px;
                font-size: 14px;
                color: $color3;
                &.active {
                    background: linear-gradient(left, #2db5ff, #2c71fc);
                    color: $write;
                }
            }
        }
    }
    &_kline {
        // height: 242px;
        background-color: $write;
        margin-bottom: 16px;
        &_container {
            // background-color: #D8D8D8;
            width: 100%;
            height: 100%;
        }
    }
    &_title {
        padding: 16px;
        height: 80px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        &_top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            p {
                font-size: 18px;
                color: $color3;
                &:last-child {
                    font-size: 22px;
                }
            }
        }
        &_bot {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 13px;
            p {
                color: $red;
                &:last-child {
                    color: $blue;
                    text-decoration: underline;
                    cursor: pointer;
                }
            }
        }
    }
    &_info {
        padding: 10px 16px;
        .List {
            overflow: hidden;
            border-radius: 6px;
            li {
                font-size: 15px;
                height: 54px;
                display: flex;
                flex-wrap: wrap;
                align-items: center;
                padding: 0 16px;
                background-color: $bgMain;
                &:nth-child(even) {
                    background-color: $colorEd;
                }
                &:nth-child(4) {
                    border-radius: 0 0 6px 6px;
                }
                p {
                    width: 50%;
                    display: flex;
                    span {
                        &:first-child {
                            width: 76px;
                            color: $color9;
                        }
                    }
                }
            }
            &_bot {
                &.mt_bot {
                    margin-top: 12px;
                    border-radius: 6px 6px 0 0;
                }
                p {
                    &:first-child {
                        color: $color9;
                    }
                    &:last-child {
                        justify-content: flex-end;
                    }
                }
            }
        }
    }
    &_order {
        height: 74px;
        font-size: 13px;
        color: $color9;
        padding: 8px 16px;
        p {
            padding: 8px 0;
        }
    }
    &_night {
        height: 64px;
        padding: 0 16px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        &_left {
            display: flex;
            align-items: center;
            font-size: 16px;
            .icon_size {
                font-size: 13px;
                color: $color9;
                img {
                    width: 16px;
                    margin-left: 8px;
                    margin-right: 4px;
                }
            }
        }
    }
    &_hanle {
        padding: 16px;
        display: flex;
        justify-content: space-between;
        button {
            font-size: 16px;
            width: 164px;
            height: 38px;
            border: 1px solid $blue;
            border-radius: 6px;
            color: $blue;
            &:last-child {
                background: linear-gradient(left, #2db5ff, #2c71fc);
                color: $write;
            }
        }
    }
    .lossProfit {
        &_row {
            display: flex;
            justify-content: space-between;
            .title {
                display: flex;
                p {
                    margin-right: 6px;
                }
            }
            .label {
                display: flex;
                align-items: center;
                width: 60px;
                min-height: 40px;
            }
        }
        &_single {
            flex: 1;
            display: flex;
            padding: 16px 0;
        }
        .box {
            position: relative;
            width: 100%;
            height: 26px;
            input {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                height: 26px;
                border: none;
                text-align: center;
                background-color: transparent;
                color: $color3;
                font-size: 16px;
            }
            img {
                width: 38px;
                top: -6px;
                position: absolute;
                padding: 8px;
                &.minus {
                    left: -8px;
                }
                &.add {
                    right: -7px;
                }
            }
            &-size {
                width: 100%;
                position: absolute;
                bottom: -20px;
                text-align: center;
                font-size: 12px;
                line-height: 1;
                padding: 2px;
            }
        }
        .hand {
            display: flex;
            justify-content: space-between;
            button {
                width: 60px;
                height: 26px;
                border-radius: 16px;
                font-size: 14px;
                border: 1px solid #1b212d;
                &.active {
                    color: $write;
                    background: linear-gradient(left, #2DAFFF, #2C68FC);
                }
            }
            &.cash {
                button {
                    width: 106px;
                }
            }
        }
    }
}