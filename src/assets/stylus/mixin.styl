// 扩展点击区域
extend-click() {
    position: relative;
    &:before {
        content: '';
        position: absolute;
        top: -9px;
        left: -9px;
        right: -9px;
        bottom: -9px;
    }
}
// hover-border
after-border($w) {
    position: relative;
    &::after {
        content: ' ';
        position: absolute;
        bottom: 1px;
        left: 50%;
        transform: translateX(-50%);
        width: $w;
        height: 3px;
        background-color: $main-color;
        border-radius: calc((3px / 2));
    }
}
after-borderTab($w) {
    position: relative;
    &::after {
        content: ' ';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: $w;
        height: 4px;
        background-color: $main-color;
        border-radius: 2px;
    }
}
main-radius() {
    background: #fff;
    border-radius: 6px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
}
// 移入变手
hover-hand() {
    cursor: pointer;
}
// 1px像素border
border-1px($color, $string = 0) {
    position: relative;
    &:after {
        display: block;
        position: absolute;
        left: 0;
        top: $string;
        width: 100%;
        border-top: 1px solid $color;
        content: ' ';
    }
}
