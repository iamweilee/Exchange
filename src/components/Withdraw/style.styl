@import '~assets/stylus/variable';
.withdraw {
    width: 100%;
    height: 520px;
    &_title {
        background-color: $bgMain;
        padding: 0 16px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 54px;
        &_l {
            font-size: 18px;
            color: $color3;
        }
        &_r {
            font-size: 14px;
            color: $color9;
            .size {
                color: $color3;
            }
        }
    }
    &_scroll {
        height: 368px;
        overflow-y: scroll;
    }
    &_from {
        padding: 0 16px 10px 16px;
        background-color: $write;
        &_single {
            width: 100%;
            min-height: 50px;
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            font-size: 15px;
            // border-bottom: 1px solid $colorE;
            // }
            .label {
                width: 88px;
                height: 31px;
                padding: 8px 0;
            }
            // input {
            // flex: 1;
            // height: 31px;
            // border: none;
            // placeholderColor($color12, 15px);
            // }
            &.bank {
                align-items: flex-start;
                border-bottom: 1px solid $colorE;
                .label {
                    height: 40px;
                    padding-top: 17px;
                }
                .bankList {
                    flex: 1;
                    .van-cell {
                        min-height: 54px;
                        padding: 0 10px;
                        &:after {
                            content: ' ';
                            position: absolute;
                            pointer-events: none;
                            -webkit-box-sizing: border-box;
                            box-sizing: border-box;
                            left: 0;
                            right: 0;
                            bottom: 0;
                            -webkit-transform: scaleY(0.5);
                            transform: scaleY(0.5);
                            border-bottom: 0.02rem solid $colorE;
                        }
                    }
                    .van-hairline--top-bottom::after {
                        display: none;
                    }
                    .van-collapse-item__title {
                        align-items: center;
                    }
                    .van-collapse-item__content {
                        padding: 0 10px;
                        .bankSingle {
                            position: relative;
                            height: 50px;
                            line-height: 22px;
                            padding: 3px;
                            display: flex;
                            align-items: center;
                            justify-content: space-between;
                            &:after {
                                content: ' ';
                                position: absolute;
                                pointer-events: none;
                                -webkit-box-sizing: border-box;
                                box-sizing: border-box;
                                left: 0;
                                right: 0;
                                bottom: 0;
                                transform: scaleY(0.5);
                                border-bottom: 0.02rem solid $colorE;
                            }
                        }
                    }
                }
            }
            ul {
                flex: 1;
                padding-top: 7px;
                li {
                    display: flex;
                    align-items: center;
                    font-size: 14px;
                    color: $color6;
                    height: 40px;
                    img {
                        width: 15px;
                        margin-right: 6px;
                    }
                }
            }
        }
        &_inp {
            width: 100%;
            height: 46px;
            border-radius: 4px;
            border: 1px solid $color12;
            display: flex;
            align-items: center;
            font-size: 15px;
            padding: 12px;
            &_left {
                width: 80px;
            }
            &_right {
                color: $blue;
                width: 70px;
                text-align: right;
                extend-click();
            }
            &_middle {
                width: calc(100% - 150px);
                display: flex;
                height: 23px;
                border: none;
            }
        }
        &_deal {
            padding: 20px 0;
            font-size: 13px;
            display: flex;
            align-items: center;
            border-bottom: 1px solid $colorE;
            .checkbox {
                width: 16px;
                height: 16px;
                background-color: $colorE;
                border-radius: 4px;
                margin-right: 10px;
                img {
                    width: 16px;
                }
            }
        }
    }
    &_tips {
        padding: 0 16px;
        line-height: 26px;
        background-color: $write;
        h2 {
            font-size: 13px;
            color: $color3;
        }
        p {
            font-size: 11px;
            color: $color9;
            display: flex;
        }
    }
    &_btn {
        padding: 24px 16px;
        background-color: $write;
        button {
            width: 100%;
            height: 46px;
            border-radius: 4px;
            background: linear-gradient(left, #00BFDE, $blue);
            font-size: 16px;
            color: $write;
        }
    }
}